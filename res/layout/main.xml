<?xml version="1.0" encoding="utf-8"?>
<TabHost android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/tabHost"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <TabWidget
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@android:id/tabs"
    />
     <FrameLayout
     android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@android:id/tabcontent"
     >
		<LinearLayout
		  xmlns:android="http://schemas.android.com/apk/res/android"
		  android:layout_width="match_parent"
	      android:layout_height="wrap_content"
		  android:id="@+id/dataTab"
		  android:orientation="vertical"
		  android:paddingTop="70dp">
		  
			<TextView
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:text="@string/hello" />
			    <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:layout_gravity="center">
			        <Button android:text="Start Service" android:layout_height="wrap_content" android:id="@+id/button1" android:onClick="onClickStartService" android:layout_width="wrap_content" android:layout_weight="1"></Button>
			        <Button android:text="Stop Service" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/button3" android:onClick="onClickStopService" android:layout_gravity="right" android:layout_weight="1"></Button>
			    </LinearLayout>
			    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/text_current_timestamp" android:text="@string/time_title" android:textStyle="bold"></TextView>
			    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/time_data" android:text="10239120312"></TextView>
			<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/accel_title" android:text="@string/accel_title" android:textStyle="bold"></TextView>
			
			<TextView
			    android:id="@+id/accel_data"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:text="@string/HelloX" />
			<TextView android:fitsSystemWindows="true" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/gps_title" android:id="@+id/gps_title" android:textStyle="bold"></TextView>
			<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/gps_data" android:text="@string/HelloX"></TextView>
			<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/id_title" android:textStyle="bold" android:text="Patient ID"></TextView>
			
			   
			
			<EditText
			    android:id="@+id/patientId"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:inputType="number"
			    android:singleLine="true" >
			</EditText>
		  
		</LinearLayout>
	     
		<LinearLayout
		    xmlns:android="http://schemas.android.com/apk/res/android"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:id="@+id/settingsTab"
		    android:orientation="vertical"
		    android:paddingTop="70dp">
		  
		    <TextView android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textStyle="bold" android:text="@string/settingstitle"></TextView>
		    <CheckBox 
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content" 
		    android:id="@+id/chkbox_wifiscan" 
		    android:text="@string/wificheckbox" 
		    android:checked="true" />
		    
		    <CheckBox 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:id="@+id/chkbox_gpsscan" 
            android:text="@string/gpscheckbox" 
            android:checked="true" />
            
            <CheckBox 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:id="@+id/chkbox_accel" 
            android:text="@string/accelcheckbox" 
            android:checked="true" />
		    
		    <Button android:layout_height="wrap_content" android:text="@string/commitsettings" android:layout_width="wrap_content" android:layout_gravity="center" android:id="@+id/button_commitSettings" android:onClick="onClickCommitSettings"></Button>
		</LinearLayout>
     
     </FrameLayout>
    
</TabHost>
