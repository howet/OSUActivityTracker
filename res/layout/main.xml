<?xml version="1.0" encoding="utf-8"?>
<TabHost android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/tabHost"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <TabWidget
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@android:id/tabs"
    />
     <FrameLayout
     android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@android:id/tabcontent"
     android:scrollbars="vertical">
     
         <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chart"
            android:orientation="vertical"
            android:paddingTop="70dp">

        </LinearLayout>

	     
		<LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/settingsTab"
            android:orientation="vertical"
            android:paddingTop="70dp">
          
            <TextView android:id="@+id/textView1" android:layout_height="wrap_content" android:textStyle="bold" android:text="@string/settingstitle" android:layout_width="wrap_content" android:layout_weight="1"></TextView>
            
            <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:layout_gravity="center">
                <Button android:text="Start Service" android:layout_height="wrap_content" android:id="@+id/button1" android:onClick="onClickStartService" android:layout_width="wrap_content" android:layout_weight="1"></Button>
                <Button android:text="Stop Service" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/button3" android:onClick="onClickStopService" android:layout_gravity="right" android:layout_weight="1"></Button>
            </LinearLayout>
            
            <CheckBox 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:id="@+id/chkbox_wifiscan" 
            android:text="@string/wificheckbox" 
            android:checked="true" android:layout_weight="1"/>
            
            <CheckBox 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:id="@+id/chkbox_gpsscan" 
            android:text="@string/gpscheckbox" 
            android:checked="true" android:layout_weight="1"/>
            
            <CheckBox 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:id="@+id/chkbox_accel" 
            android:text="@string/accelcheckbox" 
            android:checked="true" android:layout_weight="1"/>
            <CheckBox android:text="@string/gyrocheckbox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/chkbox_gyro"></CheckBox>
            <LinearLayout android:id="@+id/linearLayout2" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_weight="1">
                <TextView android:layout_width="wrap_content" android:id="@+id/textView2" android:text="Data Push Interval" android:layout_height="wrap_content" android:textSize="18sp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"></TextView>
                <EditText android:layout_width="wrap_content" android:numeric="integer" android:maxLength="3" android:id="@+id/txt_pushInterval" android:width="80dp" android:layout_height="wrap_content" android:text="30"></EditText>
            </LinearLayout>
            
            <Button android:layout_height="wrap_content" android:text="@string/commitsettings" android:layout_width="wrap_content" android:layout_gravity="center" android:id="@+id/button_commitSettings" android:onClick="onClickCommitSettings" android:layout_weight="1"></Button>
        </LinearLayout>
     
     </FrameLayout>
    
</TabHost>
